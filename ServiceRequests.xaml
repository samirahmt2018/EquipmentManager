<Window x:Class="Equipment_Manager.ServiceRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Equipment_Manager"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"

        Title="Service Requests" Height="472" Width="634" Icon="Images/flint.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>

            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="service_requestes" SelectionChanged="service_requestes_SelectionChanged">

        </DataGrid>

        <Button Name="insertButton" Grid.Row="1" HorizontalAlignment="Right" Content="Edit" Width="81" Margin="0,5" Click="insertButton_Click"></Button>


    </Grid>
</Window>